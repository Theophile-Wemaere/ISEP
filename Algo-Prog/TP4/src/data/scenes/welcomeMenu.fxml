      <Label fx:id="corner2" layoutX="8.0" layoutY="516.0" prefHeight="20.0" prefWidth="113.0" text="ISEP 2022-2023" textFill="WHITE">
         <font>
            <Font name="Meslo LG S Regular Nerd Font Complete" size="13.0" />
         </font>
